# Database Configuration
DATABASE_URL=postgresql://localhost:5432/provcontrol

# Authentication Secrets
# Generate with: openssl rand -hex 32
JWT_SECRET=your-jwt-secret-here
SESSION_SECRET=your-session-secret-here

# Application Configuration
NODE_ENV=development
PORT=3000

# Storage Provider Configuration
# Options: "local" | "s3"
STORAGE_PROVIDER=local

# Local Storage Configuration (when STORAGE_PROVIDER=local)
STORAGE_LOCAL_PATH=./uploads

# S3 Storage Configuration (when STORAGE_PROVIDER=s3)
# Compatible with AWS S3, Cloudflare R2, Wasabi, and other S3-compatible services
S3_BUCKET=your-bucket-name
S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key

# Optional S3 Configuration
# S3_ENDPOINT=https://your-endpoint.com  # For R2, Wasabi, or custom S3-compatible services
# S3_CDN_URL=https://cdn.example.com     # CDN URL for serving files (optional)
# S3_KEY_PREFIX=uploads/                 # Prefix for all object keys (optional)
